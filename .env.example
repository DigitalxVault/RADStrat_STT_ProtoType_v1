# OpenAI API Key (required)
OPENAI_API_KEY=sk-your-api-key-here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Origins (comma-separated, for production add your frontend URL)
# Example: CORS_ORIGINS=http://localhost:5173,https://your-frontend.vercel.app
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Unity Scoring API Key (for standalone scoring endpoint)
# Set a secure random key - Unity game will use this in X-API-Key header
UNITY_SCORING_API_KEY=your-secure-unity-api-key-here
